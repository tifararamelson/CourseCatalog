<h2> Results </h2>
<br />
<!-- To get the subject -->
<% @hasResult = false %>
	<% @courses.each do |c| %>

		<% array = c.subject %>
		<% str = array.split(",") %>

		<% str.each do |id| %>
			<% if id.include?("-") %>
				<% unit = id.split('"') %>
				<% @final = unit[3] %>
			<% end %>
		<% end %>

		<div>
		<% if @sub_id == @final %>
			<% if c.name %>
				<% if c.name.downcase.include?(@course_result.downcase)%>
					<% @hasResult = true %>
					<%= c.name %>
					<%= button_to 'Enroll', {:controller => "home", :action => "index", :course => c.name, :id => c.id} , :method=>:post %>
				<% end %>
			<% else %>
				<%= c.name %>
			<% end %>
		<% end %>
		</div>
	<% end %>
	<% if !@hasResult %>
		<p> There are no results to display </p>
	<% end %>